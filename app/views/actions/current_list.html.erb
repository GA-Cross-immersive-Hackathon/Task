<%=  render 'layouts/header'%>
<div class="container">
	<h1 class="col-sm-offset-3 col-sm-6">With <%= @time_est %> minutes you could: </h1>



	<% @priority_actions.each do |priority| %>
	<div class="action-div col-sm-offset-2 col-sm-8 text-center">
			<h3 class="action" id="<%= priority.id %>"><%= priority.action_name%></h3>
			<div class="clicker-div">
				<p>Notes: <%= priority.notes%></p>
				<p>Time: <%= priority.time_estimated%></p>
				<button type="button" data-toggle="modal" data-target="#choosingTaskModal" class="btn btn-default select-task">Do this task.</button>
			</div>
		</div>
	<% end %>

	<% @sorted_actions.each do |action| %>
	<div class="action-div col-sm-offset-2 col-sm-8 text-center">
			<h3 class="action" id="<%= action.id %>"><%= action.action_name%></h3>
			<div class="clicker-div">
				<p>Notes: <%= action.notes%></p>
				<p>Time: <%= action.time_estimated%></p>
				<button type="button" data-toggle="modal" data-target="#choosingTaskModal" class="btn btn-default select-task">Do this task.</button>
			</div>
		</div>
	<% end %>
	<script charset="utf-8">
		collapsableList();
	</script>

</div>

<!-- TIMER MODAL -->

<div class="modal fade" id="choosingTaskModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">[name of action]</h4>
      </div>
    </div>
  </div>
</div>

