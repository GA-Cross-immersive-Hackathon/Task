<section class="container-fluid">
  <p class="alert"><%= alert%></p>
  <div id='title-div' class="col-sm-offset-3 col-sm-6">
    <h1 id="prod-name">RealTime</h1>
    <span class="sub-sentence text-center col-sm-offset-2">Use your down time <span class="productively">productively</span>.</span>
    <div class="row" >
      <a href="#loginModal" class="col-xs-offset-3 col-xs-3">
        <button type="button" data-toggle="modal" data-target="#loginModal" class='btn btn-default btn-lg login'>Login</button>
      </a>
      <a href="#singupModal" class="col-xs-3" >
        <button type="button" data-toggle="modal" data-target="#signupModal" class='btn btn-default btn-lg signup'> Signup</button>
      </a>
    </div>
  </div>
</section>


<!-- LOGIN FORM -->

<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Welcome Back to TASK!</h4>
      </div>

      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }, class: "form-horizontal") do |f| %>
 <!-- <form class="form-horizontal"> -->
        <div class="form-group">
          <%= f.label "Email", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Password", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <% if devise_mapping.rememberable? %>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-default login" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- SIGNUP FORM -->

<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Signup</h4>
      </div>
      <div class="modal-body">
        <%= form_for(@user, url: registration_path(@user)) do |f| %>
          <div class="form-group">
            <%= f.label "Email", class: "col-sm-2 control-label"%>
            <div class="col-sm-10">
              <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label "Password", class: "col-sm-2 control-label"%>
            <div class="col-sm-10">
              <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label "Password Confirmation", class: "col-sm-2 control-label"%>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control" %>
            </div>
          </div>
          <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-default signup" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
