<%= render "layouts/header"%>
<div class="container">
	<div class="row">
		<div class='col-sm-offset-3 col-sm-6'>
			<h1>New Task</h1>

			<!-- user_registration POST   /users(.:format)               devise/registrations#create -->

			<form class="form-horizontal" action= "/actions" method= "post" id="new-task-form">

				<div class="form-group">
					<label class="col-sm-2 control-label">Task Name</label>
					<div class="col-sm-10">
						<input type="text" name= "action_name" class="form-control"  placeholder="Name">
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-2 control-label">Notes</label>
					<div class="col-sm-10">
						<input type="text" name= "notes" class="form-control"  placeholder="Notes">
					</div>
				</div>


				<div class="form-group">
					<label class="col-sm-2 control-label">Time</label>
					<div class=" col-sm-10 text-center">
						<input type="radio" id="btn-0" name= "time_estimated" class="btn btn-default btn-lg" value= "5" checked>
						<label for="btn-0">5</label>
						<input type="radio" id="btn-1" name= "time_estimated" class="btn btn-default btn-lg" value= "10" checked>
						<label for="btn-1">10</label>
						<input type="radio" id="btn-2" name= "time_estimated" class="btn btn-default btn-lg" value= "20" checked>
						<label for="btn-2">20</label>
						<input type="radio" id="btn-3" name= "time_estimated" class="btn btn-default btn-lg" value= "30" checked>
						<label for="btn-3">30</label>
						<input type="radio" id="btn-4" name= "time_estimated" class="btn btn-default btn-lg" value= "40" checked>
						<label for="btn-4">40</label>
						<input type="radio" id="btn-5" name= "time_estimated" class="btn btn-default btn-lg" value= "50" checked>
						<label for="btn-5">50</label>
						<input type="radio" id="btn-6" name= "time_estimated" class="btn btn-default btn-lg" value= "60" checked>
						<label for="btn-6">60</label>
					</div>
				</div>

				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token() %>">
				<div class="form-group">
						<div class="col-md-offset-6 col-md-4">
							<button type="submit" class="btn btn-default" id="add-new-task">Add Task</button>
						</div>
					</div>
				</div>
			</form>

</div>
