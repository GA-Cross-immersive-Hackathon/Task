<%= render "layouts/header"%>
<div class="container">
	<div class="jumbotron col-md-offset-3 col-md-6">
				<h2>How much time do you have?</h2>
		<div>
				<input type="text" class="col-sm-3 form-control" name="current-time"></input>
				<select id="time-selection" class="col-sm-3 form-control">
					<option value="minute">Minute(s)</option>
					<option value="hour">Hour(s)</option>
				</select>
				<button type="button" class="btn btn-default" id="select-time">Submit</button>
		</div>
	</div>
</div>
